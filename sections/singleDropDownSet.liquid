{% schema %}
{
  "name": "treatment accordian",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "text",
      "label": "Section Heading",
      "id":"heading-inital"
    },
    
    {
      "type": "image_picker",
      "label": "heading icon",
      "id":"icon"
    },
    
    {
      "type": "select",
      "label": "heading alignment",
      "id":"heading-alignment",
      "options": [
        {
          "value": "left",
          "label": "left"
        },{
          "value": "right",
          "label": "right"
        }
      ]
    },
    {
      "type": "text",
      "label": "treatment category heading",
      "id":"heading-cat"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "blocks": [
       {
      "type": "text",
      "name": "treatment",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "treatment heading"
        },
        {
          "type": "text",
          "id": "duration",
          "label": "duration"
        },
        {
          "type": "text",
          "id": "price",
          "label": "price"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "description"
        },
        {
          "type": "text",
          "id": "book-now-message",
          "label": "book-now-message"
        }
    ]
  }
  ],
  "presets": [
    {
      "name": "treatment accordian"
    }
  ]
}
{% endschema %}
