{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .faq-grid {
    display: flex;  
    align-items: center;
    justify-content: space-between;
  }

  .text-right{
    text-align: right
  }

  .inital-hr {
    margin-bottom: 0;
    margin-top: 0rem;
}

.book-p{
  margin-bottom: 0;
  padding-bottom: 1rem
}

  hr.trailing-line {
    width: 50%;
    margin-right: auto;
    margin-left: auto;
}


.margin-0{
  margin:0;
}

.margin-top-05{
  margin-top:.5rem
}

.margin-bottom-2{
  margin-bottom: 2rem;
}

.clickable{
  cursor: pointer;}


{%- endstyle -%}



<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="section-{{ section.id }}-padding page-width drop-trigger">
    {% if section.settings.heading-inital %}
      <h2 class="header-style-2 h2 margin-b-3-5">{{section.settings.heading-inital}}</h2>
    {% endif %}
    <hr class="inital-hr">
    <div id="service-{{ section.settings.heading-cat | replace: ' ', '-' }}" class="scroll-target"  onclick="this.nextElementSibling.classList.toggle('height-0')">
      <a href="/#service-{{ section.settings.heading-cat | replace: ' ', '-' }}">
        <h3 class="h1 clickable margin-top-05 margin-bottom-2 {%  if section.settings.heading-alignment == 'right' %} text-right {% endif %}">
          {%  if section.settings.heading-alignment == 'left' and section.settings.icon != null  %} 
            <span>{{ section.settings.icon | image_url: width: 20 | image_tag }}</span>
          {% endif %} 
          {{section.settings.heading-cat}}
          {%  if section.settings.heading-alignment == 'right' and section.settings.icon != null %} 
            <span>{{ section.settings.icon | image_url: width: 20 | image_tag }}</span>
          {% endif %} 
        </h3>
      </a>
      </div>

{% comment %} drop down container {% endcomment %}
    <div class="height-0 drop-container">
    
    {% for block in section.blocks %}
      <div class="faq-grid">
        <h3 class="h3 header-style-2 margin-0 ">{{block.settings.heading}}</h3>
        </div>
        <div>
          {% if block.settings.shortDescription1 !="" %}
