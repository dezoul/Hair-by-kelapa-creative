{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .faq-grid {
    display: flex;  
    align-items: center;
    justify-content: space-between;
  }

  .text-right{
    text-align: right
  }

  .inital-hr {
    margin-bottom: 0;
    margin-top: 1rem;
}

  hr.trailing-line {
    width: 50%;
    margin-right: auto;
    margin-left: auto;
}

.height-0{
  height: 0;
  overflow:hidden;
}
.margin-0{
  margin:0;
}

.margin-top-05{
  margin-top:.5rem
}

.clickable{
  cursor: pointer;}


{%- endstyle -%}



<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="section-{{ section.id }}-padding page-width drop-trigger">
    {% if section.settings.heading-inital %}
      <h2 class="header-style-2 h2 margin-bottom-">{{section.settings.heading-inital}}</h2>
    {% endif %}
    <hr class="inital-hr">
    <div id="service-{{ section.settings.heading-cat }}" class="scroll-target" onclick="this.nextElementSibling.classList.toggle('height-0')">
        <h3 class="h1 clickable margin-top-05 {%  if section.settings.heading-alignment == 'right' %} text-right {% endif %}">
        {%  if section.settings.heading-alignment == 'left' and section.settings.icon != null  %} 
          <span>{{ section.settings.icon | image_url: width: 20 | image_tag }}</span>
        {% endif %} 
           {{section.settings.heading-cat}}
           {%  if section.settings.heading-alignment == 'right' and section.settings.icon != null %} 
            <span>{{ section.settings.icon | image_url: width: 20 | image_tag }}</span>
          {% endif %} 
          </h3>
    </div>

{% comment %} drop down container {% endcomment %}
    <div class="height-0 drop-container">
    
    {% for block in section.blocks %}
      <div class="faq-grid">
        <h3 class="h3 header-style-2 margin-0 ">{{block.settings.heading}}</h3>
        <p class="margin-0">Rp {{block.settings.price}}</p>
      </div>
      <div>
        <p class="margin-0">{{block.settings.duration}} min</p>
        <p>{{block.settings.description}}</p>
        <p class="text-right"><a href="https://api.whatsapp.com/send/?phone=6287725855520&text={{block.settings.book-now-message | replace: ' ','%20'}}">Book Now</a></p>
      </div>
      {% unless forloop.last %}
        <hr class="trailing-line">
      {% endunless %}
    {% endfor %}
  </div>

  </div>
</div>

