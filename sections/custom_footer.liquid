{% schema %}
{
  "name": "Custom footer",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "richtext",
      "id": "richtext",
      "label": "Description",
      "info": "t:sections.custom-liquid.settings.custom_liquid.info"
    },
    {
          "type": "text",
          "id": "hours",
          "label": "Hours",
          "default": "+62 87862137603"
        },
        {
          "type": "text",
          "id": "whatsapp-text",
          "label": "whatsApp text",
          "default": "+62 87862137603"
        },
        {
          "type": "text",
          "id": "whatsapp-message",
          "label": "link to whatsapp",
          "default": "Hi i would like to book in for"
        },
        {
          "type": "text",
          "id": "email-text",
          "label": "email text"
        },
        {
          "type": "url",
          "id": "email-Link",
          "label": "email link"
        },
        {
          "type": "text",
          "id": "insta-text",
          "label": "insta text"
        },
        {
          "type": "url",
          "id": "insta-Link",
          "label": "insta link"
        },
        {
          "type": "text",
          "id": "location-text",
          "label": "location text"
        },
        {
          "type": "url",
          "id": "location-Link",
          "label": "location link"
        },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "Custom footer"
    }
  ]
}
{% endschema %}
